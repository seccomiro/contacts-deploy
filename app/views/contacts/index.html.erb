<% content_for :title do %>
  Contacts
<% end %>

<div class="page-header">
  <h1>Contacts</h1>
  <%= link_to new_contact_path, class: 'btn btn-primary' do %>
    <%= icon 'fas', 'plus' %>
    Novo Contact
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Kind</th>
        <th>Company</th>
        <th>Address</th>
        <th>Phone Count</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @contacts.each do |contact| %>
        <tr>
          <td><%= contact.name %></td>
          <td><%= contact.email %></td>
          <td><%= contact.kind.description %></td>
          <td><%= contact.company.name %></td>
          <td><%= contact.address&.full_address %></td>
          <td><%= contact.phones_count %></td>
          <td>
            <%= link_to contact, class: 'btn btn-info btn-sm' do %>
              <%= icon 'fas', 'eye', class: 'fa-fw' %>
            <% end %>
            <%= link_to edit_contact_path(contact), class: 'btn btn-success btn-sm' do %>
              <%= icon 'fas', 'edit', class: 'fa-fw' %>
            <% end %>
            <%= link_to contact, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class: 'btn btn-danger btn-sm' do %>
              <%= icon 'fas', 'times', class: 'fa-fw' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>